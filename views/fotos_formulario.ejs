<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <title><%= title %></title>
</head>
<body>
  <div class="container">
    <p class="h2 text-center mt-4">Photos Management</p>
    
    <div class="row mt-4">
      <div class="col-md-8 mx-auto text-center">
        <a href="/photos/list" class="btn btn-primary btn-lg mb-3">View All Photos</a>
        <a href="/photos/rate" class="btn btn-secondary btn-lg mb-3">Filter by Rate</a>
        <a href="/photos/search" class="btn btn-info btn-lg mb-3">Search by ID</a>
      </div>
    </div>

    <div class="row mt-4">
      <div class="col-md-6 mx-auto">
        <div class="myform form">
          <h3 class="text-center mb-3">Add New Photo</h3>
          <form action="/photos/save" method="post" name="add">
            <div class="form-group mt-2">
              <input type="text" name="title" class="form-control" placeholder="Title" required>
            </div>
            <div class="form-group mt-2">
              <input type="text" name="description" class="form-control" placeholder="Description" required>
            </div>
            <div class="form-group mt-2">
              <input type="number" min="0" max="10" step="0.1" name="rate" class="form-control" placeholder="Rate" required>
            </div>
            <div class="text-center mt-4">
              <button type="submit" class="btn btn-primary">Add Photo</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>